<mvc:View controllerName="customActivity.Teste2"

    xmlns:l="sap.ui.layout"

    xmlns:mvc="sap.ui.core.mvc"

    xmlns="sap.m"

    xmlns:f="sap.ui.layout.form"

    xmlns:model="sap.ui.model"

    xmlns:table="sap.ui.table"

    xmlns:core="sap.ui.core"

    xmlns:html="http://www.w3.org/1999/xhtml">

    <Page title="Employee"

        enableScrolling="false">
	<content>
			<Table>
    <columns>
      <Column
        width="12em">
        <Text text="User Name" />
      </Column>
       <Column
        minScreenWidth="Tablet"
        demandPopin="true">
        <Text text="Email" />
      </Column>
    </columns>

<items>
      <ColumnListItem>
        <cells>
          <ObjectIdentifier
            title="{UserName}"
            class="sapUiTinyMarginTopBottom" />
          <Text
            text="{Email}" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
		

	 </content>

    </Page>

</mvc:View>
